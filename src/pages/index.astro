---
import Layout from '../layouts/Layout.astro';
---

<Layout title={negocio?.nombre || 'Nombre del Local'}>
  <section class="hero">
    <div class="hero-content">
      <div class="hero-column">
        <img src={negocio?.logo || '/images/logo.png'} alt="Logo" class="hero-logo" />
        <h1>{negocio?.nombre || 'Nombre del Local'}</h1>
        <p>{negocio?.descripcion || 'Descripción breve del local.'}</p>
        <a class="btn" href={`https://wa.me/${negocio?.whatsapp}?text=${encodeURIComponent(negocio?.mensaje_boton_whatsapp || '¡Hola! ¿Qué necesitás hoy?')}`} target="_blank">
          {negocio?.texto_boton_whatsapp || 'Hacenos tu pedido'}
        </a>
      </div>
    </div>
  </section>

  <section class="menu" id="menu">
    <h2>Menú</h2>
    <p class="menu-subtitle">{negocio?.subtitulo_menu || 'Conocé nuestras hamburguesas'}</p>
    <div class="burger-list" id="burger-list"></div>
  </section>

  <section class="about" id="about">
    <h2>Sobre Nosotros</h2>
    <p>{negocio?.descripcion || 'Somos una hamburguesería de barrio apasionada por el sabor.'}</p>
    {negocio?.horario && <p><strong>Horario: {negocio.horario}</strong></p>}
  </section>

  <section class="reviews" id="reviews">
    <h2>Reseñas</h2>
    <div class="review-list" id="reviews-container"></div>
  </section>

  <section class="contact" id="contact">
    <h2>Contacto</h2>
    <div class="contact-methods">
      {negocio?.instagram && (
        <a href={negocio.instagram} target="_blank" rel="noopener noreferrer">
          <img src="/images/instagram.svg" alt="Instagram" class="icon" /> Instagram
        </a>
      )}
      {negocio?.whatsapp && (
        <a href={`https://wa.me/${negocio.whatsapp}?text=${encodeURIComponent(negocio?.mensaje_inicio_chat || 'Necesito hacer un pedido...')}`} target="_blank">
          <img src="/images/whatsapp.svg" alt="WhatsApp" class="icon" /> WhatsApp
        </a>
      )}
    </div>
  </section>

  <footer class="footer">
    <p>&copy; {new Date().getFullYear()} {negocio?.nombre || 'Nombre del Local'}. Todos los derechos reservados.</p>
  </footer>

  <script type="module" src="/loadData.js"></script>
</Layout>
